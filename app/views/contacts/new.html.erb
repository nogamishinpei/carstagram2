<%= form_for(@contact, url: confirm_path) do |f| %>
<div class="container">

<div class="form-group">
  <%= f.label :name, 'お名前' %>
  <%= f.text_area :name, autofocus: true, class: 'form-control' %>
</div>

<div class="form-group">
  <%= f.label :email, 'メールアドレス' %>
  <%= f.text_area :email, autofocus: true, class: 'form-control' %>
</div>

<div class="form-group">
  <%= f.label :phone_number, '電話番号' %>
  <%= f.text_area :phone_number, autofocus: true, class: 'form-control', placeholder:'電話番号xxx-xxxx-xxxx' %>
</div>

<div class="form-group">
  <%= f.label :subject, '件名' %>
  <%= f.text_area :subject, autofocus: true, class: 'form-control', placeholder:'用件を入力してください' %>
</div>

<div class="form-group">
  <%= f.label :message, 'メッセージ*' %>
  <%= f.text_area :message, size: '10x10', class: 'form-control', placeholder:'詳細を入力' %>
</div>


<div>
  <%= f.submit '入力内容確認' %>
</div>

<% end %>
</div>