<% @users.each do |user| %>
<h2><%= user.name %>さんをフォローしているユーザー一覧</h2>
<% end %>
<div class="col-md-8 offset-md-1">
  <table class="table table-sm user-index">
<% if @users.exists? %>

<thead>
  <tr>
    <th>image</th>
    <th>name</th>
    <th></th>
    <th></th>
  </tr>
</thead>

<tbody>
  <% @users.each do |user| %>
  <tr>
    <td><%= attachment_image_tag user, :profile_image, :fill, 150, 150, fallback: "no_image.png" %></td>
    <td><%= user.name %></td>
    <td>フォロー数: <%= user.followings.count %></td>
    <td>フォロワー数: <%= user.followers.count %></td>
  </tr>
<% end %>
</tbody>
</table>
</div>
<% else %>
<p>フォロー中のユーザーはいません</p>
<% end %>