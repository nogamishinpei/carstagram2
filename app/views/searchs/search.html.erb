<h2>検索結果</h2>

<!--投稿検索結果表示-->
<table class="table table-hover table-inverse">
  <% if @range == '2' %>
  <h1>投稿検索結果</h1>
  <thead>
    <tr>
      <th></th>
      <th>タイトル</th>
      <th>投稿内容</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @post_image.each do |post_image| %>
    <tr>
      <td>
        <%= link_to(post_image.user) do %>
        <%= attachment_image_tag(post_image.user, :profile_image, :fill, 60, 60, fallback: "no_image.png") %>
        <% end %>
      </td>

      <td>
        <%= link_to post_image.post_title, post_image, class: "post_image_#{post_image.id}" %>
      </td>
      <td><%= post_image.caption %></td>
    </tr>
    <% end %>
  </tbody>

  <!--ユーザー検索結果表示-->
  <% else %>
  <h1>ユーザーの検索結果</h1>
  <thead>
    <tr>
      <th>アイコン</th>
      <th>名前</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @user.each do |user| %>
    <tr>
      <td><%= attachment_image_tag user, :profile_image, :fill, 60, 60, fallback: "no_image.png" %></td>
      <td><%= user.name %></td>
      <td><%= link_to "ユーザー詳細画面へ", user, class: "user_#{user.id}" %></td>
    </tr>
    <% end %>
  </tbody>
  <% end %>
</table>